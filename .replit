modules = ["java-graalvm22.3", "python-3.11"]
[agent]
expertMode = true
integrations = ["python_openai_ai_integrations:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Minima Node"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Minima Chat"

[[workflows.workflow]]
name = "Minima Node"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd minima && ./start.sh"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Minima Chat"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd chat && python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 9001
externalPort = 3000

[[ports]]
localPort = 9003
externalPort = 3001

[[ports]]
localPort = 9005
externalPort = 3002

